#!/usr/bin/env bash

pip-install () {
  echo "Processing: ${1}"
  if [[ -e "${1}" ]]
  then
    pip install -r "${1}" --user
  else
    printf "Not found: ${1}\n"
  fi
}

WORKDIR="${WORKDIR:-/usr/src/app}";

pip-install "$WORKDIR/requirements.txt"
pip-install "$WORKDIR/requirements-dev.txt"


